---
import "../styles/pages/skills.scss";

import Layout from "../layouts/Layout.astro";
import Tab from "../components/Tab";

const tabInformation = {
  tabs: [
    { id: "frontend", text: "Frontend" },
    { id: "backend", text: "Backend" },
    { id: "design", text: "Design" },
    { id: "manageVersion", text: "Manage" },
    { id: "toLearn", text: "To learn" },
  ],
  panels: [
    {
      id: "frontend",
      information: [
        { title: "HTML", icon: "html" },
        { title: "CSS", icon: "css" },
        { title: "Javascript", icon: "javascript" },
        { title: "React", icon: "react" },
        { title: "Angular", icon: "angular" },
        { title: "Astro", icon: "astro" },
        { title: "Bootstrap", icon: "bootstrap" },
        { title: "Styled Components", icon: "styled-components" },
      ],
    },
    {
      id: "backend",
      information: [
        { title: "Node Js", icon: "node" },
        { title: "Firebase", icon: "firebase" },
      ],
    },
    {
      id: "design",
      information: [
        { title: "Figma", icon: "figma" },
        { title: "Adobe XD", icon: "xd" },
        { title: "Photoshop", icon: "photoshop" },
      ],
    },
    {
      id: "manageVersion",
      information: [
        { title: "GIT", icon: "git" },
        { title: "Github", icon: "github" },
        { title: "Gitlab", icon: "gitlab" },
      ],
    },
    {
      id: "toLearn",
      information: [{ title: "React Native", icon: "react" }],
    },
  ],
};
---

<!-- My Skills
Currently I have skills and management of the following web and mobile technologies. -->
<Layout title="Skills">
  <section class="skills-page">
    <header class="header">
      <h3 class="header__title">Skills</h3>
      <p class="header__caption">
        I like to craft beautiful and scalable web products
      </p>
    </header>
    <Tab client:load tabInformation={tabInformation} />
  </section>
</Layout>
